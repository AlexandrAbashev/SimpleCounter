<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Фоновые -->
    <SolidColorBrush x:Key="PrimaryBackground">#191919</SolidColorBrush>
    <SolidColorBrush x:Key="SecondaryBackground">#2C2C2C</SolidColorBrush>

    <!-- Акценты -->
    <SolidColorBrush x:Key="PrimaryAccent">#1976D2</SolidColorBrush>
    <SolidColorBrush x:Key="SecondaryAccent">#1E88E5</SolidColorBrush>
    <SolidColorBrush x:Key="InactiveAccent">#145EA8</SolidColorBrush>

    <!-- Текст -->
    <SolidColorBrush x:Key="PrimaryText">#E0E0E0</SolidColorBrush>
    <SolidColorBrush x:Key="SecondaryText">#B0B0B0</SolidColorBrush>
    <SolidColorBrush x:Key="InactiveText">#707070</SolidColorBrush>

    <!-- Границы -->
    <SolidColorBrush x:Key="PrimaryBorder">#2C2C2C</SolidColorBrush>
    <SolidColorBrush x:Key="SecondaryBorder">#1E1E1E</SolidColorBrush>

</ResourceDictionary>