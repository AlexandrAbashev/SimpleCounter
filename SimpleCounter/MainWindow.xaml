<Window
    x:Class="SimpleCounter.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SimpleCounter"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SimpleCounter"
    Width="600"
    Height="430"
    Background="{StaticResource PrimaryBackground}"
    Icon="/Resources/icon.ico"
    ResizeMode="CanMinimize"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="85*" />
            <RowDefinition Height="15*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*" />
            <ColumnDefinition Width="50*" />
            <ColumnDefinition Width="25*" />
        </Grid.ColumnDefinitions>

        <Ellipse
            Grid.Row="0"
            Grid.Column="1"
            Width="270"
            Height="270"
            Fill="{StaticResource SecondaryBackground}" />
        <Viewbox
            Grid.Row="0"
            Grid.Column="1"
            Width="240"
            Height="240">
            <TextBlock
                x:Name="currentNumberText"
                Height="90"
                VerticalAlignment="Center"
                FontFamily="pack://application:,,,/Resources/#Luculent"
                FontSize="90"
                Foreground="{StaticResource PrimaryText}"
                Text="0"
                TextAlignment="Center" />
        </Viewbox>

        <Grid Grid.Row="0" Grid.Column="0">
            <Button
                x:Name="subButton"
                Width="130"
                Height="130"
                Click="SubButton_Click"
                Style="{StaticResource RoundedButtonStyle}" />
            <Rectangle
                Width="110"
                Height="25"
                Fill="{StaticResource PrimaryText}"
                IsHitTestVisible="False"
                RadiusX="10"
                RadiusY="10" />
        </Grid>

        <Grid Grid.Row="0" Grid.Column="2">
            <Button
                x:Name="addButton"
                Width="130"
                Height="130"
                Click="AddButton_Click"
                Style="{StaticResource RoundedButtonStyle}" />
            <Rectangle
                Width="110"
                Height="25"
                Fill="{StaticResource PrimaryText}"
                IsHitTestVisible="False"
                RadiusX="10"
                RadiusY="10" />
            <Rectangle
                Width="25"
                Height="110"
                Fill="{StaticResource PrimaryText}"
                IsHitTestVisible="False"
                RadiusX="10"
                RadiusY="10" />
        </Grid>

        <DockPanel
            Grid.Row="1"
            Grid.Column="1"
            LastChildFill="True">
            <TextBlock
                Margin="0,0,15,0"
                VerticalAlignment="Center"
                FontSize="50"
                Foreground="{StaticResource SecondaryText}"
                Text="Step"
                TextAlignment="Center" />
            <TextBox
                x:Name="stepTextbox"
                CommandManager.PreviewExecuted="StepTextbox_PreviewExecuted"
                InputScope="Number"
                PreviewTextInput="StepTextbox_PreviewTextInput"
                Style="{StaticResource TextBoxStyle}"
                Text="1" />
        </DockPanel>

    </Grid>
</Window>
